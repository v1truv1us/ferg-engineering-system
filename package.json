  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ferg-cod3s/ferg-engineering-system"
  },
  "bugs": {
    "url": "https://github.com/ferg-cod3s/ferg-engineering-system/issues"
